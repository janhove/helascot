Package: helascot
Type: Package
Title: Datasets for the Heritage Language and School Language (HELASCOT) Project
Version: 1.0.0
Authors@R: c(
    person("Jan", "Vanhove", email="janvanhove@gmail.com", role = c("aut", "cre")),
    person("Raphael", "Berthele", role = c("aut")),
    person("Amelia", "Lambelet", role = c("aut"))
